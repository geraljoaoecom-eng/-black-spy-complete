{
  "manifest_version": 3,
  "name": "BLACK SPY",
  "description": "BLACK SPY: análise e filtragem de anúncios com destaque de duplicações e auto‑scroll.",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png", 
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_title": "BLACK SPY",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}


